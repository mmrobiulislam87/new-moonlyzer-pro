
{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Zenius Moonlyzer Pro",
  "version": "1.0.0",
  "identifier": "com.zenius.moonlyzer.pro",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Zenius Moonlyzer Pro",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
